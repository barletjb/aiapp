<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Permet à Spring Boot d'injecter les variables du .yml -->
    <springProperty scope="context" name="DB_URL" source="spring.datasource.url"/>
    <springProperty scope="context" name="DB_USER" source="spring.datasource.username"/>
    <springProperty scope="context" name="DB_PASS" source="spring.datasource.password"/>

    <!-- Appender pour enregistrer dans la base MySQL -->
    <appender name="DB" class="ch.qos.logback.classic.db.DBAppender">
        <connectionSource class="ch.qos.logback.core.db.DriverManagerConnectionSource">
            <driverClass>com.mysql.cj.jdbc.Driver</driverClass>
            <url>${DB_URL}</url>
            <user>${DB_USER}</user>
            <password>${DB_PASS}</password>
        </connectionSource>
    </appender>

    <!-- On garde l'affichage console pendant le dev -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender fichier local avec rotation quotidienne -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file> <!-- Dossier logs/ créé automatiquement à la racine du projet -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Un fichier par jour -->
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Garder les 7 derniers jours -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Définir les logger du package -->
    <logger name="come.example.aiapp.controller" level="INFO" additivity="false">
        <appender-ref ref="DB"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.aiapp.service" level="INFO" additivity="false">
        <appender-ref ref="DB"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="come.example.aiapp.dal" level="INFO" additivity="false">
        <appender-ref ref="DB"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger racine -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>